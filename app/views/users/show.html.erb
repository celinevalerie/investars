<%= cl_image_tag @user.photo.key, height: 200, width: 200, crop: :fill, style: "border-radius: 200px; margin: 30px 50px;" %>

<div style="width: 300px; margin: 0px 0px 0px 55px;">
  <div style="text-decoration: none">
    <ul style="list-style-type: none; padding: 0px;">
      <li> Name: <%= @user.name %></li>
      <li> Role: <%= @user.role %></li>
      <li> URL: <%= @user.url %></li>
      <li> Industry: <%= @user.industry %></li>
    </ul>
  </div>

  <div class="button_small">
    <%= link_to "Request investment", new_user_funding_round_path(@user), style: "color: white; text-align: center;" %>
  </div>
</div>



