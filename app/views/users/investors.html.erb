<h2 class="page-title">Investors</h2>

<h4 class="page-subtitle">Our very experienced investors</h4>


<div class="container">
  <%= form_tag investors_users_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a investor"
          %>
        <% end %>
  <div class="row">
    <div class="col-12">
      <%= submit_tag "Search", class: "button-z" %>
      <% @investors.each do |investor| %>
        <div class="card mt-3 mb-5" style="max-width: 2000px;">
          <div class="row no-gutters d-flex align-tiems-center">
            <div class="col-lg-4 investor-photo">
              <% if investor.photo.present? %>
                <%= cl_image_tag investor.photo.key, :class => "card-img" %>
              <% end %>
            </div>
            <div class="col-lg-5">
              <div class="card-body">
                <h5 class="card-title"><%= investor.name %></h5>
                <p class="card-text"><%= investor.description.slice(0..100)%><% if investor.description.length >= 100 %> <%= "..." %><%end%></p>
                <p class="industrycard">Industry: <%= investor.industry %></p>
              </div>
            </div>
            <div class="col-lg-3">
              <div class="button investor-button">
                <%= link_to "Investor Profile", user_path(investor) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
