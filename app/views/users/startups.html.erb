<h2 class="page-title">Startups</h2>

<h4 class="page-subtitle">Our startups surprise with their innovation potential</h4>

<div class="container">
  <%= form_tag investors_users_path, method: :get do%>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            style: "margin: 15px;",
            placeholder: "Find a startup"
          %>
        <% end %>
        <%= submit_tag "Search", class: "button-z" %>
  <div class="row">
    <div class="col-12">
      <% @startups.each do |startup| %>
        <div class="card mt-3 mb-5 ml-3 mr-3" style="max-width: 2000px;">
          <div class="row no-gutters d-flex align-tiems-center">
            <div class="col-lg-4 investor-photo">
              <% if startup.photo.present? %>
                <%= cl_image_tag startup.photo.key, :class => "card-img" %>
              <% end %>
            </div>
            <div class="col-lg-5">
              <div class="card-body">
                <h5 class="card-title"><%= startup.name %></h5>
                <p class="industrycard"><strong><%= startup.industry %></strong></p>
                <p class="card-text"><%= startup.description.slice(0..100)%><% if startup.description.length >= 100 %> <%= "..." %><%end%></p>
                <p class="industrycard">Industry: <%= startup.industry %></p>
              </div>
            </div>
            <div class="col-lg-3">
              <div class="button investor-button">
                <%= link_to "Startup Profile", user_path(startup) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div id="map"
      class ="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


