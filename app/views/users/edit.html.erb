
<h2 class="page-title">Profile Update</h2>

<h4 class="page-subtitle">Change your profile</h4>

<div class="container-small">

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role,
                required: true,
                :collection => ["startup", "investor"] %>
    <%= f.input :name,
                required: true %>
    <%= f.input :description,
                required: true %>
    <%= f.input :industry,
                required: true %>
    <%= f.input :address,
                required: true %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class=button>
  <div class="form-actions">
    <%= f.button :submit, "Save Profile" %>
  </div>
  </div>
</div>
<% end %>
