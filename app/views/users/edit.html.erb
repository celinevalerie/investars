<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role,
                required: true,
                :collection => ["startup", "investor"] %>
    <%= f.input :name,
                required: true %>
    <%= f.input :description,
                required: true %>
    <%= f.input :industry,
                required: true %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save Profile" %>
  </div>
<% end %>
